<%= form_tag(form_action_path, method: "post") do %>
  <div class="form-group">
    <%= label_tag "alphabet: " %>
    <%= text_field_tag("alphabet", value = "abcdefghijklmnopqrstuvwxyz",
                                                class: "form-control",
                                                required: true) %>
  </div>
  <h4> Key </h4>
  <div class="form-group">
    <%= label_tag "alpha: " %>
    <%= text_field_tag("alpha", value = 1, class: "form-control",
                                           required: true) %>
  </div>
  <div class="form-group">
    <%= label_tag("beta: ") %>
    <%= text_field_tag("beta", value = 1, class: "form-control",
                                          required: true) %>
  </div>
  <div class="form-group">
    <%= label_tag(text_label) %>
    <%= text_field_tag("text", value = text_value, class: "form-control",
                                                   rows: 3,
                                                   required: true) %>
  </div>
  <%= submit_tag button_text, class: "btn btn-primary" %>
<% end %>
