<% content_for(:title, "Cryptography | Assignment 1") %>
<div class="container">
  <h1>PUBLIC KEY CRYPTOGRAPHY</h1>
  <h2> Assignment 1 </h2>
  <ul class="nav nav-tabs" role="tablist">
    <li class="nav-item active">
      <a class="nav-link" data-toggle="tab" href="#encrypt" role="tab">Encrypt</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-toggle="tab" href="#decrypt" role="tab">Decrypt</a>
    </li>
  </ul>
  <!-- TODO(cosmin): add client-side validation -->
  <div class="tab-content">
    <div class="tab-pane active" id="encrypt" role="tabpanel">
      <h3>Affine ciffer - Encrypt</h3>
      <%= form_tag("/encrypt", method: "post") do %>
        <h4> Alphabet </h4>
        <table>
          <tr>
            <% Array(0..25).each do |idx| %>
            <td>
              <%= label_tag(idx + 1) %>
            </td>
            <% end %>
          </tr>
          <tr>
            <% Array(0..25).each do |idx| %>
            <td>
              <%= text_field_tag(idx, (idx + 'a'[0].ord).chr, size: 1, maxlength:1) %>
            </td>
            <% end %>
          </tr>
          <%= hidden_field_tag(26, ' ')  %>
        </table>
        <h4> Encryption key </h4>
        <div class="form-group row">
          <%= label_tag "alpha: ", nil, class: "col-sm-1 col-form-label" %>
          <div class="col-sm-10">
            <%= text_field_tag("alpha", value = 1) %>
          </div>
        </div>
        <div class="form-group row">
          <%= label_tag("beta: ", nil, class: "col-sm-1 col-form-label") %>
          <div class="col-sm-10">
            <%= text_field_tag("beta", value = 1) %>
          </div>
        </div>
        <div class="form-group row">
          <%= label_tag("Text to encrypt: ", nil, class: "col-sm-1 col-form-label") %>
          <div class="col-sm-10">
            <%= text_field_tag("text", value = "text to encrypt") %>
          </div>
        </div>
        <%= submit_tag "Encrypt", class: "btn btn-primary" %>
      <% end %>
    </div>
    <div class="tab-pane" id="decrypt" role="tabpanel">
      <h3>Affine ciffer - Decrypt</h3>
      <%= form_tag("/decrypt", method: "post") do %>
        <h4> Alphabet </h4>
        <table>
          <tr>
            <% Array(0..25).each do |idx| %>
            <td>
              <%= label_tag(idx + 1) %>
            </td>
            <% end %>
          </tr>
          <tr>
            <% Array(0..25).each do |idx| %>
            <td>
              <%= text_field_tag(idx, (idx + 'a'[0].ord).chr, size: 1, maxlength:1) %>
            </td>
            <% end %>
          </tr>
          <%= hidden_field_tag(26, ' ')  %>
        </table>
        <h4> Encryption key </h4>
        <div class="form-group row">
          <%= label_tag("alpha: ", nil, class: "col-sm-1 col-form-label") %>
          <div class="col-sm-10">
            <%= text_field_tag("alpha", value = 1) %>
          </div>
        </div>
        <div class="form-group row">
          <%= label_tag("beta: ", nil, class: "col-sm-1 col-form-label") %>
          <div class="col-sm-10">
            <%= text_field_tag("beta", value = 1) %>
          </div>
        </div>
        <div class="form-group row">
          <%= label_tag("Text to decrypt: ", nil, class: "col-sm-1 col-form-label") %>
          <div class="col-sm-10">
            <%= text_field_tag("ciphertext", value = "text to decrypt") %>
          </div>
        </div>
        <%= submit_tag("Decrypt", class: "btn btn-primary") %>
      <% end %>
    </div> <!-- tab-pane -->
  </div> <!-- tab-content -->
</div> <!-- content -->
